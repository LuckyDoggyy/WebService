<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.we.ws.admin.mapper.WebServiceMapper" >

    <select id="listService" resultType="com.we.ws.admin.domain.ServiceInfo">
        SELECT * from T_ServiceInfo
        <where>
            <if test="sid != null and sid!=''">
                and sid = #{sid}
            </if>
            <if test="name != null and name!=''">
                and name = #{name}
            </if>
        </where>
        limit #{offset},#{pageSize}
    </select>

    <select id="countListService" resultType="int">
        SELECT count(*) from T_ServiceInfo
        <where>
            <if test="sid != null and sid!=''">
                and sid = #{sid}
            </if>
            <if test="name != null and name!=''">
                and name = #{name}
            </if>
        </where>
    </select>

</mapper>